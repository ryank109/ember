{{#each phone in model}}
    <div class="form-group">
        <label>{{phone.type}}</label>
        {{input type="text" class="form-control" placeholder="(xxx)xxx-xxxx" value=phone.formattedPhoneNumber}}
        <button class="btn btn-danger" {{action 'deletePhone' phone}}>Delete</button>
    </div>
{{/each}}
<button id="addPhoneBtn" class="btn btn-success" {{action 'addPhone' model}}>Add Phone</button>

<div class="hidden">
    <div id="addPhoneForm">
        <div class="form-group">
            <label>Label</label>
            {{input type="text" class="form-control" value=phoneToAdd.type}}
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            {{input type="text" class="form-control" placeholder="(012)345-6789" value=phoneToAdd.formattedPhoneNumber}}
        </div>
        <button class="btn btn-success" {{action 'save' phoneToAdd}}>Add</button>
    </div>
</div>
